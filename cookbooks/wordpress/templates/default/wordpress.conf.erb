<VirtualHost *:80>
  ServerName <%= @params[:server_name] %>
  DocumentRoot <%= @params[:docroot] %>

  <Directory <%= @params[:docroot] %>>
    Options FollowSymLinks
    AllowOverride None
    Order allow,deny
    Allow from all
  </Directory>

  <Directory />
    Options FollowSymLinks
    AllowOverride None
  </Directory>

  LogLevel info
  ErrorLog /var/log/apache2/<%= @params[:name] %>-error.log
  CustomLog /var/log/apache2/<%= @params[:name] %>-access.log combined

  RewriteEngine On
  RewriteLog /var/log/apache2/<%= @application_name %>-rewrite.log
  RewriteLogLevel 0

</VirtualHost>